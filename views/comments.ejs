<h1><%= title %></h1>
<ul>
  <% comments.forEach(c => { %>
    <li><strong><%= c.user %></strong>: <%= c.text %></li>
  <% }) %>
</ul>
<form method="POST" action="/comments">
  <textarea name="commentText" rows="3" required class="form-control"></textarea><br>
  <button type="submit" class="btn btn-primary">Add Comment</button>
</form>

