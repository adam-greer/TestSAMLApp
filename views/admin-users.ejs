<table class="table table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th>Display Name</th>
      <th>Auth Type</th>
      <th>Can Login Locally</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.displayName %></td>
        <td><%= user.authType %></td>
        <td><%= user.canLoginLocally ? 'Yes' : 'No' %></td>
        <td>
          <% if (user.authType === 'local') { %>
            <a href="/admin/users/edit/<%= user.id %>">Edit</a>
          <% } else { %>
            <span class="text-muted">SAML user â€“ no edit</span>
          <% } %>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>

