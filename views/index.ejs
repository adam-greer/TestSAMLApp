<div class="container mt-5">
  <h1>Welcome to the SAML Test App</h1>
  <% if (!user) { %>
    <p><a href="/login" class="btn btn-primary">Login with SAML</a></p>
  <% } else { %>
    <p>You are logged in as <strong><%= user.nameID || user.email || 'Unknown User' %></strong></p>
    <a href="/profile" class="btn btn-secondary">View Profile</a>
    <a href="/logout" class="btn btn-danger ms-2">Logout</a>
  <% } %>
</div>

